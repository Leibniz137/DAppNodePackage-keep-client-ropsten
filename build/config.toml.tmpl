# Ethereum host connection info.
[ethereum]
URL = "{{ .WsRpcUrl }}"
URLRPC = "{{ .HttpRpcUrl }}"

# Keep operator Ethereum account.
[ethereum.account]
Address = "{{ .Address }}"
KeyFile = "/mnt/keystore/keep_wallet.json"

# Keep contract addresses configuration.
[ethereum.ContractAddresses]
KeepRandomBeaconOperator = "0xf417b31104631280adF9F6828ee19985BC299fdC"
TokenStaking = "0x8117632eC1D514550b3880Bc68F9AC1A76c9C67B"
KeepRandomBeaconService = "0xd83248e311DC2Ba0d2A051e86f0678d8857f6ADD"

# Keep network configuration.
[LibP2P]
Peers = [
{{- range .Peers }}
  "{{ . }}",
{{- end }}
]
Port = 3919

# Storage is encrypted
[Storage]
DataDir = "/mnt/persistence"
